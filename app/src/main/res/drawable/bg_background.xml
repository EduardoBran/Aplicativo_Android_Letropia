<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:startColor="@color/blue50"
                android:endColor="@color/blue200"
                android:type="linear"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:centerX="0.5"
                android:centerY="0.3"
                android:centerColor="@color/white_translucent"
                android:endColor="@color/blue50"
                android:useLevel="false"/>
        </shape>
    </item>
</layer-list>